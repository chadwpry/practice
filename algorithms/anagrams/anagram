#!/usr/bin/env coffee

Wordlist = require('./wordlist.js')

document = () ->
  path = process.argv[1].split('/').slice(0, -1)
  path.push process.argv[2]
  path.join('/')

if process.argv.length > 3
  wl = new Wordlist document()
  anagrams = wl.anagrams(process.argv[3])

  if anagrams.length
    console.log anagrams.join(', ')
else
  process.stdout.write 'usage: ./anagram <wordfile> word\n'
